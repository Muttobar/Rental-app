{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "strict": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@env": [
        "./src/@types/env.d.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
